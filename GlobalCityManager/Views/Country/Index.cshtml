@model IEnumerable<GlobalCityManager.Models.Country>
<div class="row">
    <h2>Countries list</h2>
    <a href='@Url.Action("Create")' class="btn btn-info btn-circle btn-sm" data-toggle="tooltip" data-placement="right" title="Add a New Country" style="margin-top:0.4rem;margin-left:2rem;">
        <i class="fa fa-plus" style="font-size:1rem;"></i>
    </a>
</div>
<div class="container tableFixHead">
    <table class="table table-hover">
        <thead>
            <th>National Flag</th><th>Code</th><th>Name</th><th>Region</th><th>Edit</th><th>Remove</th>
        </thead>
        @foreach (var c in Model)
        {
            <tr>
                <td>
                <img src="@c.NationalFlag" class="image" /> 
                </td>
                <td>
                    @Html.ActionLink(@c.Code,"Detail", new {code=c.Code})
                </td>
                <td>
                    @c.Name
                </td>
                <td>
                    @c.Region
                </td>
                <td>
                    <a href='@Url.Action("Update",new{code=c.Code})' class="btn btn-warning btn-circle btn-sm" data-toggle="tooltip" data-placement="top" title="Modify this Country">
                        <i class="fa fa-pencil" style="font-size:1rem;color:white;"></i>
                    </a>
                </td>
                <td>
                    <a href='@Url.Action("Delete",new{code=c.Code})' class="btn btn-danger btn-circle btn-sm" data-toggle="tooltip" data-placement="top" title="Remove this Country">
                        <i class="fa fa-trash" style="font-size:1rem;color:white;"></i>
                    </a>
                </td>
            </tr>
        }
    </table>
</div>
<script type="text/javascript">
    $(function () {
    $('[data-toggle="tooltip"]').tooltip()
    })
</script>