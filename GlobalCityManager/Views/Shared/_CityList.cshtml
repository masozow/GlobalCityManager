@model GlobalCityManager.Models.City
<tr>
    <td>@Model.Id</td>
    <td>@Model.Name</td>
    <td>@Model.Population</td>
    <td>@Model.District</td>
    <td>@Html.ActionLink(@Model.CountryCode,"Detail","Country",new {code = @Model.CountryCode}) </td>
    <td>
        <a href='@Url.Action("Edit",new{id=@Model.Id})' class="btn btn-warning btn-circle btn-sm" data-toggle="tooltip" data-placement="top" title="Modify this city">
        <i class="fa fa-pencil" style="font-size:1rem;color:white;"></i>
        </a>
    </td>
</tr>