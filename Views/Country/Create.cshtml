@model GlobalCityManager.Models.Country

<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4" style="text-align:center;">
            <h1>Add a New Country</h1>
        </div>
        <div class="col-md-4"></div>
    </div>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <form action="Create" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    @Html.LabelFor(c=>c.Code)
                    @Html.TextBoxFor(c=>c.Code,new{@class="form-control"})
                </div>
                <div class="form-group">
                    @Html.LabelFor(c=>c.Name)
                    @Html.TextBoxFor(c=>c.Name,new{@class="form-control"})
                </div>
                <div class="form-group">
                    @Html.LabelFor(c=>c.Region)
                    @Html.TextBoxFor(c=>c.Region,new{@class="form-control"})
                </div>
               <div class="form-group">
                    <div class="input-group">
                        <div class="custom-file">
                            <input type="file" name="nationalFlagFile" class="custom-file-input" id="inputGroupFile01"
                            aria-describedby="inputGroupFileAddon01">
                            <label class="custom-file-label" for="inputGroupFile01">Choose a local file for the flag</label>
                        </div>
                    </div>
                </div>
                <div class="form-row float-right">
                    <input type="submit" value="Add" class="btn btn-info" />
                </div>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>