@using GlobalCityManager.Models
@model List<Country>
@{
    var specificModel = Model[0]??new Country();
}
<div class="row">
    <h2>Countries list</h2>
    <a href='@Url.Action("Create")' class="btn btn-info btn-circle btn-sm" data-toggle="tooltip" data-placement="right" title="Add a New Country" style="margin-top:0.4rem;margin-left:2rem;">
        <i class="fa fa-plus" style="font-size:1rem;"></i>
    </a>
</div>

<div class="container tableFixHead">
    @Html.AutomaticTableTypedWithActions(c=>specificModel.Code,Model,new{@class="table table-hover"},"Detail","Country","Edit","Update","Country",new{@class="btn btn-warning"},"Delete","Delete","Country",new{@class="btn btn-danger"})
</div>
<script type="text/javascript">
    $(function () {
    $('[data-toggle="tooltip"]').tooltip()
    })
</script>